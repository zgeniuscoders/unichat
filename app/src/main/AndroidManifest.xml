<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniChat"
        tools:targetApi="31">
        <activity
            android:name=".activities.AddPostActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.CommentActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateUserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.AllGroupActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.AddGroupActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.AddUserChatActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.VerificationActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.OPTVerifyActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.UniChat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.UniChat.NoActionBar" />
    </application>

</manifest>